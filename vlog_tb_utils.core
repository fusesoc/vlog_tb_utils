CAPI=2:

name : fusesoc:utils:vlog_tb_utils:1.1.1
description : Verilog test bench utilities
license : ISC

filesets:
  tb_files:
    files:
      - vlog_functions.v
      - vlog_tap_generator.v
      - vlog_tb_utils.v
    file_type : verilogSource

targets:
  default:
    filesets : [tb_files]
    parameters : [heartbeat, tapfile, testcase, timeout, vcd]

parameters:
  heartbeat:
    datatype    : int
    description : Display a heartbeat message every n*heartbeat time unit
    paramtype   : plusarg

  tapfile:
    datatype    : str
    description : Name of TAP file
    paramtype   : plusarg

  testcase:
    datatype    : str
    description : Name of testcase (Used for VCD filename)
    paramtype   : plusarg

  timeout:
    datatype    : int
    description : Abort test case after n cycles
    paramtype   : plusarg

  vcd:
    datatype    : bool
    description : Enable VCD logging
    paramtype   : plusarg
